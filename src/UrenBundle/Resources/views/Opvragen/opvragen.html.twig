{% extends 'UrenBundle::base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Opvragen</h1>
        <p>Voer je de juiste ID van een week in.</p>
        <!-- search -->
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
        </form>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Userid</th>
                <th>Starttime</th>
                <th>Endtime</th>
                <th>Actions</th>
           </tr>
            </thead>
            <tbody>
            {% for time_registration in time_registrations %}
            <tr>
                <td><a href="{{ path('time_registration_show', { 'id': time_registration.id }) }}">{{ time_registration.id }}</a></td>
                <td>{{ time_registration.userId }}</td>
                <td>{% if time_registration.startTime %}{{ time_registration.startTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if time_registration.endTime %}{{ time_registration.endTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('time_registration_show', { 'id': time_registration.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('time_registration_edit', { 'id': time_registration.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
                <td><button type="submit" class="btn btn-danger" id="delete">Delete</button></td>
                <td><button type="submit" class="btn btn-success" id="new">New</button></td>
            </tr>
            </tbody>
            {% endfor %}
        </table>
    </div>


    <ul>
        <li>
            <a href="{{ path('time_registration_new') }}">Create a new entry</a>
        </li>
    </ul>

{% endblock %}

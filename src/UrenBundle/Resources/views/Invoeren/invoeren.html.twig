{% extends 'UrenBundle::base.html.twig' %}

{% block title %}Invoeren uren{% endblock %}

{% block body %}
    <div class="container">
        <h1>Invoeren</h1>
        <p>Voer hier je uren en andere informatie in.</p>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Datum</th>
                <th>Week</th>
                <th>Begin</th>
                <th>Eind</th>
                <th>Pauze</th>
                <th>Uurloon</th>
                <th>Totale Uren</th>
                <th>Totale Bedrag</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <!-- voorbeeld -->
                <td>1-1-2016</td>
                <td>1</td>
                <td>9</td>
                <td>17:00</td>
                <td>2</td>
                <td>8,00</td>
                <td>8</td>
                <td>64,-</td>
                <td><button type="submit" class="btn btn-danger" id="delete">Delete</button></td>
            </tr>
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary" id="toevoegen">+</button>
        <button type="submit" class="btn btn-primary" id="edit">Opslaan</button>
        <button type="submit" class="btn btn-warning" id="annuleren">Annuleren</button>
    </div>
{% endblock %}
